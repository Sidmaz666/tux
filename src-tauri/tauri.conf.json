{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "tux",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
        "fs": {
        "all": false, 
        "readFile": true,
        "writeFile": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true,
        "save": true
      },
      "window" : {
	"all": false,
	"setFullscreen": true,
	"close" : true
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Tux Editor",
        "width": 1920,
        "height": 1080
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tux.code",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
